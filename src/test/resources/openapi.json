{
  "openapi": "3.0.0",
  "info": {
    "title": "Library API",
    "version": "1.0.0",
    "description": "This API allows clients to manage books in the library system."
  },
  "paths": {
    "/books": {
      "post": {
        "summary": "Add new books to the library",
        "operationId": "addBooks",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddBooksRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Books successfully added",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BooksResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input provided",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AddBooksRequest": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "The name of the book"
            },
            "author": {
              "type": "string",
              "description": "The author of the book"
            },
            "publishYear": {
              "type": "integer",
              "format": "int32",
              "description": "The year the book was published"
            },
            "comment": {
              "type": "string",
              "description": "Any additional comments about the book"
            }
          },
          "required": [
            "name",
            "author",
            "publishYear"
          ],
          "additionalProperties": false
        }
      },
      "BooksResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "The unique identifier of the newly added book"
          },
          "name": {
            "type": "string"
          },
          "author": {
            "type": "string"
          },
          "publishYear": {
            "type": "integer"
          },
          "comment": {
            "type": "string"
          },
          "message": {
            "type": "string",
            "description": "Additional message about the book"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "Error message explaining the issue"
          }
        }
      }
    }
  }
}